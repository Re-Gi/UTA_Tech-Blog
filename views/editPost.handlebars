{{!-- WHEN I click on one of my existing posts in the dashboard
THEN I am able to delete or update my post and taken back to an updated dashboard --}}

<h1>Edit Post</h1>

<form class="form editPost-form" data-id="{{post.id}}">
<div class="mb-3 form-group">
  <label for="editPost-title" class="editPost-form">Title:</label>
  <textarea class="form-input" id="editPost-title" rows="1">{{post.title}}</textarea>
</div>
<div class="mb-3 form-group">
  <label for="editPost-contents" class="editPost-form">Content:</label>
  <textarea class="form-input" id="editPost-contents" rows="3">{{post.content}}</textarea>
</div>
<div class="form-group">
  <button type="submit" class="btn btn-primary btn-lg">Update</button>
</div>
</form>
<button type="click" data-id="{{post.id}}" class="deletePost-btn btn btn-danger btn-lg" style="float:right;">Delete</button>


<script src="/js/editPost.js"></script>